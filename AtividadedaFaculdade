//Crie um algoritmo usando o C que leia um valor de uma nota, at√© que seja informado um valor valido (entre 0 e 10)//

#include<stdio.h>
int main(){
  int valor;
  valor = -1;
  while(valor < 0 || valor > 10){
      printf("Digite um valor: ");
      scanf("%d", &valor);
      if(valor < 0 || valor > 10){
        printf("Valor invalido! \n");
      } else {
        printf("Valor valido! \n");
      }
  }
  return 0;
}
